<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable name="ingredientItem"
            type="com.example.nutritionapp.database.IngredientDataClass">

        </variable>

        <variable
            name="clickListener"
            type="com.example.nutritionapp.ingredientlist.networkIngredientAdapter.NetworkIngredientListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:onClick="@{() -> clickListener.onClick(ingredientItem)}"
        >


        <ImageView
            android:id="@+id/ingredient_image"
            android:layout_width="134dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/quantity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ingredient_name"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/fui_idp_button_background_anonymous" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="@dimen/ingredient_item_width_name"
            android:layout_height="@dimen/ingredient_item_height_name"
            android:layout_marginTop="8dp"
            android:text="@{String.valueOf(ingredientItem.quantity)}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/ingredient_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredient_name" />

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="@dimen/ingredient_item_width_name"
            android:layout_height="@dimen/ingredient_item_height_name"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@{ingredientItem.name}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/ingredient_image"
            app:layout_constraintHorizontal_bias="0.317"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>