<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="ingredientViewModel"
                type="com.example.nutritionapp.ingredientlist.IngredientViewModel" />
        <!-- Create adapter for recycler view to use variable -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ingredient_list_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_local"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/Ingredients_at_Home"
            app:layout_constraintStart_toStartOf="@+id/Ingredients_at_Home"
            app:layout_constraintTop_toBottomOf="@+id/Ingredients_at_Home">

        </androidx.recyclerview.widget.RecyclerView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_network"
            android:layout_width="wrap_content"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/Ingredients_at_Home"
            app:layout_constraintEnd_toEndOf="@+id/searchIngredient"
            app:layout_constraintStart_toStartOf="@+id/searchIngredient"
            app:layout_constraintTop_toBottomOf="@+id/searchIngredient">


        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/searchIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="search ingredient"
            android:text="@={ingredientViewModel.searchItem}"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_network"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Ingredients_at_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients at Home"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_local"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_network"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_network"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_network" />

        <TextView
            android:id="@+id/test"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="92dp"
            android:text="@{String.valueOf(ingredientViewModel.displayListInXml.size())}"
            app:layout_constraintEnd_toStartOf="@+id/searchIngredient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- app:testSize="@{ingredientViewModel.listOfNetworkRequestedIngredients.size()}" -->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/searchIngredientFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.606"
            app:layout_constraintStart_toEndOf="@+id/searchIngredient"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>