<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="recipeNotification"
            type="com.example.nutritionapp.maps.RecipeNotificationClass" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="296dp"
            android:textSize="50sp"
            android:text="@{recipeNotification.recipeName}"
            app:layout_constraintEnd_toEndOf="@+id/missing_ingredients_list"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/missing_ingredients_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/missing_ingredients_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            listIngredients="@{recipeNotification.missingIngredients}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>